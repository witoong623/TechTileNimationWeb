@using TechTileNimation.Models
@model IEnumerable<SensationEntry>
@{
    ViewData["Title"] = "Home Page";
}

@section csses {
    <style>
        body {
            margin: 0 0 0 0;
            background-image: #fdfcfb;
        }

        #head-img {
            position: relative;
        }

        #upload-button {
            display: block;
            position: absolute;
            right: 50px;
            top: 12px;
            font-size: 24px;
            color: white;
        }

        .entry-div {
            background-position: center center;
            -webkit-filter: grayscale(50%);
            filter: grayscale(50%);
        }

        .entry-button {
            bottom: 100px;
            left: 480px;
            height: 100px;
            width: 200px;
            font-size: 36px;
            COLOR: WHITE;
            background: transparent;
            box-shadow: inset 0 0 10px #888888;
            border-bottom: 1px solid #FFF;
            border-radius: 50px;
        }

        .button {
            transition: all 0.5s;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }

        #rain-img {
            position: relative;
        }

        #rain-img-button {
            position: absolute;
        }

        #train-img {
            position: relative;
        }

        #train-img-button {
            position: absolute;
        }

        #coin-img {
            position: relative;
        }

        #coin-img-button {
            position: absolute;
        }

        #helicopter-img {
            position: relative;
        }

        #helicopter-img-button {
            position: absolute;
        }

        #walk-img {
            position: relative;
        }

        #walk-img-button {
            position: absolute;
        }

        #bubble-img {
            position: relative;
        }

        #bubble-img-button {
            position: absolute;
        }

        .size-animation {
            width: 800px;
            height: 480px;
        }
        .size-preview-modal {
            width: 800px;
            height: 480px;
        }
    </style>
}
<div class="container">
    <div class="row">
        <div class="col-md-12 entry-div" id="head-img">
            <img src="~/images/techtile.jpg" class="img-responsive">
            <a asp-action="upload" id="upload-button" class="button"><span>UPLOAD</span></a>
        </div>
    </div>
    <!-- Start rain -->
    <div class="row">
        <div class="col-md-12 entry-div" id="rain-img">
            <img src="~/images/rain.png" class="img-responsive">
            <button type="button" id="rain-img-button" class="button entry-button" data-toggle="modal" data-target="#rain"><span>RAIN</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="rain" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">RAIN</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/rain.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#rain-audio" data-toggle="modal" data-target="#rain">
                        <source src="~/audios/rain.mp3" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- End rain -->
    <!-- start train-->
    <div class="row">
        <div class="col-md-12 entry-div" id="train-img">
            <img src="~/images/train.png" class="img-responsive">
            <button type="button" id="train-img-button" class="button entry-button" data-toggle="modal" data-target="#train"><span>TRAIN</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="train" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">TRAIN</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/train.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#train-audio">
                        <source src="~/audios/trains.wav" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- end train-->
    <!-- start coin-->
    <div class="row">
        <div class="col-md-12 entry-div" id="coin-img">
            <img src="~/images/coin.png" class="img-responsive">
            <button type="button" id="coin-img-button" class="button entry-button" data-toggle="modal" data-target="#coin"><span>COIN</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="coin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">COIN</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/coin.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#coin-audio">
                        <source src="~/audios/coin.mp3" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- end coin-->
    <!-- start helicopter-->
    <div class="row">
        <div class="col-md-12 entry-div" id="helicopter-img">
            <img src="~/images/helicopter.png" class="img-responsive">
            <button type="button" id="helicopter-img-button" class="button entry-button" style="height: 100px; width: 280px; bottom: 100px; left: 460px;" data-toggle="modal" data-target="#helicopter"><span>HELICOPTER</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="helicopter" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">HELICOPTER</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/helicopter.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#helicopter-audio">
                        <source src="~/audios/helicopter.mp3" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- end helicopter-->
    <!-- start walk-->
    <div class="row">
        <div class="col-md-12 entry-div" id="walk-img">
            <img src="~/images/walk.png" class="img-responsive">
            <button type="button" id="walk-img-button" class="button entry-button" data-toggle="modal" data-target="#walk"><span>WALK</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="walk" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">WALK</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/walk.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#walk-audio">
                        <source src="~/audios/walk.mp3" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- end walk-->
    <!-- start bubble-->
    <div class="row">
        <div class="col-md-12 entry-div" id="bubble-img">
            <img src="~/images/bubble.jpg" class="img-responsive">
            <button type="button" id="bubble-img-button" class="button entry-button" data-toggle="modal" data-target="#bubble"><span>BUBBLE</span></button>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade bs-example-modal-lg" id="bubble" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">BUBBLE</h4>
                </div>
                <div class="modal-body">
                    <!-- start modal body -->
                    <center>
                        <iframe src="~/htmlAnimation/bobble.html" class="size-animation"></iframe>
                    </center>
                    <audio id="#walk-audio">
                        <source src="~/audios/bubble.mp3" type="audio/mp3" />
                    </audio>
                </div><!-- end modal body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div><!--End Modal -->
    <!-- end bubble-->

    @foreach (var entry in Model)
    {
        <div class="row">
            <div class="col-md-12 entry-div" style="position: relative;">
                <img src="@entry.PreviewImageLink" class="img-responsive">
                <button type="button" style="position: absolute" class="button entry-button" data-toggle="modal" data-target="#@entry.Name.Replace(" ", "_")"><span>@entry.Name</span></button>
            </div>
        </div>
        <!-- start modal -->
        <div class="modal fade bs-example-modal-lg" id="@entry.Name.Replace(" ", "_")" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">@entry.Name</h4>
                    </div>
                    <div class="modal-body">
                        <!-- start modal body -->
                        <center>
                            @if (entry.AnimationLink != null)
                            {
                                <video class="size-animation">
                                    <source src="@entry.AnimationLink" type="video/mp4" />
                                </video>
                            }
                            else
                            {
                                <img src="@entry.PreviewImageLink" class="size-preview-modal" />
                            }
                        </center>
                        <audio id="#walk-audio">
                            <source src="~/audios/bubble.mp3" type="audio/mp3" />
                        </audio>
                    </div><!-- end modal body -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- end modal -->
    }
</div>
