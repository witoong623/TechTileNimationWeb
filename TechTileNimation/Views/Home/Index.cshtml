@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Sound</title>
    <style>
        body{
            margin-top:0px;            
        }
        .container {
            background-color: white;
        }

        #head-img {
            background-image: url("images/techtile.jpg");
            background-size: 1170px 600px;
            position: relative;
        }

        #upload-button {
            display: block;
            position: absolute;
            border-bottom: 1px solid #FFF;
            border-radius: 25px;
            background: transparent;
            box-shadow: inset 0 0 10px #888888;
            -webkit-box-shadow: inset 0 0 10px rgba(0,0,0,0.25);
            height: 40px;
            width: 150px;
            margin: 0px auto 30px auto;
            right: 50px;
            top: 12px;
            font-size: 24px;
            color: white;
        }

        .entry-div {
            height: 600px;
            background-position: center center;
        }

        .entry-button {
            top: 400px;
            left: 480px;
            height: 100px;
            width: 200px;
            font-size: 36px;
            COLOR: WHITE;
            background: transparent;
            box-shadow: inset 0 0 10px #888888;
            border-bottom: 1px solid #FFF;
            border-radius: 50PX;
        }

        .button {
            transition: all 0.5s;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }

        #rain-img {
            background-image: url("images/rain.png");
            position: relative;
        }

        #rain-img-button {
            position: absolute;
        }

        #train-img {
            background-image: url("images/train.png");
            position: relative;
        }

        #train-img-button {
            position: absolute;
        }

        #coin-img {
            background-image: url("images/coin.png");
            position: relative;
        }

        #coin-img-button {
            position: absolute;
        }

        #helicopter-img {
            background-image: url("images/helicopter.png");
            position: relative;
        }

        #helicopter-img-button {
            position: absolute;            
        }

        #walk-img {
            background-image: url("images/walk.png");
            position: relative;
        }

        #walk-img-button {
            position: absolute;
        }

        #bubble-img {
            background-image: url("images/helicopter.png");
            position: relative;
        }

        #bubble-img-button {
            position: absolute;
        }     
    </style>
</head>



    <body style="background-color: #c4c4c4">
        <div class="container">
            <div class="row">
                <div class="col-md-12 entry-div" id="head-img">
                    <button type="button" id="upload-button" class="button"><span>UPLOAD</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="rain-img">
                    <button type="button" id="rain-img-button" class="button entry-button"><span>RAIN</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="train-img">
                    <button type="button" id="train-img-button" class="button entry-button"><span>TRAIN</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="coin-img">
                    <button type="button" id="coin-img-button" class="button entry-button"><span>COIN</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="helicopter-img">
                    <button type="button" id="helicopter-img-button" class="button entry-button" style="height: 100px; width: 280px; top: 400px; left: 460px;"><span>HELICOPTER</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="walk-img">
                    <button type="button" id="walk-img-button" class="button entry-button"><span>WALK</span></button>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="col-md-12 entry-div" id="bubble-img">
                    <button type="button" id="bubble-img-button" class="button entry-button"><span>BUBBLE</span></button>
                </div>
            </div>
        </div>
    </body>
</html>





