@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Sound</title>
    <style>
        body {
            margin: 0 0 0 0;
            background-image: #fdfcfb;            
        } 
        #head-img {           
            position: relative;
        }
        #upload-button {
            display: block;
            position: absolute;
            right: 50px;
            top: 12px;
            font-size: 24px;
            color: white;
        }

        .entry-div {
            height: 600px;
            background-position: center center;
            -webkit-filter: grayscale(50%);
            filter: grayscale(50%);
        }

        .entry-button {
            top: 400px;
            left: 480px;
            height: 100px;
            width: 200px;
            font-size: 36px;
            COLOR: WHITE;
            background: transparent;
            box-shadow: inset 0 0 10px #888888;
            border-bottom: 1px solid #FFF;
            border-radius: 50PX;
        }

        .button {
            transition: all 0.5s;
        }

            .button span {
                cursor: pointer;
                display: inline-block;
                position: relative;
                transition: 0.5s;
            }

                .button span:after {
                    content: '\00bb';
                    position: absolute;
                    opacity: 0;
                    top: 0;
                    right: -20px;
                    transition: 0.5s;
                }

            .button:hover span {
                padding-right: 25px;
            }

                .button:hover span:after {
                    opacity: 1;
                    right: 0;
                }

        #rain-img {            
            position: relative;
        }

        #rain-img-button {
            position: absolute;
        }

        #train-img {
            position: relative;
        }

        #train-img-button {
            position: absolute;
        }

        #coin-img {
            position: relative;
        }

        #coin-img-button {
            position: absolute;
        }

        #helicopter-img {
            position: relative;
        }

        #helicopter-img-button {
            position: absolute;            
        }

        #walk-img {
            position: relative;
        }

        #walk-img-button {
            position: absolute;
        }

        #bubble-img {
            position: relative;
        }

        #bubble-img-button {
            position: absolute;
        }     
    </style>
</head>



    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-12 entry-div" id="head-img">
                    <img src="~/images/techtile.jpg" class="img-responsive">
                    <a asp-action="upload" id="upload-button" class="button"><span>UPLOAD</span></a>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="rain-img">
                    <img src="~/images/rain.png" class="img-responsive">
                    <button type="button" id="rain-img-button" class="button entry-button" data-toggle="modal" data-target="#rain"><span>RAIN</span></button>
                </div>
            </div>
            <div class="modal fade" id="rain" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Rain</h4>
                        </div>
                        <div class="modal-body">
                            ...
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="train-img">
                    <img src="~/images/train.png" class="img-responsive">
                    <button type="button" id="train-img-button" class="button entry-button"><span>TRAIN</span></button>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="coin-img">
                    <img src="~/images/coin.png" class="img-responsive">
                    <button type="button" id="coin-img-button" class="button entry-button"><span>COIN</span></button>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="helicopter-img">
                    <img src="~/images/helicopter.png" class="img-responsive">
                    <button type="button" id="helicopter-img-button" class="button entry-button" style="height: 100px; width: 280px; top: 400px; left: 460px;"><span>HELICOPTER</span></button>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="walk-img">
                    <img src="~/images/walk.png" class="img-responsive">
                    <button type="button" id="walk-img-button" class="button entry-button"><span>WALK</span></button>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12 entry-div" id="bubble-img">
                    <img src="~/images/rain.png" class="img-responsive">
                    <button type="button" id="bubble-img-button" class="button entry-button"><span>BUBBLE</span></button>
                </div>
            </div>
        </div>
    </body>
</html>





